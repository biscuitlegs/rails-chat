<!DOCTYPE html>
<html>
  <head>
    <title>RailsChat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    
    <% if user_signed_in? %>
      <%= tag :meta, name: "current_user", id: current_user.id %>
    <% end %>
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-brand">
        <a href="<%= root_path %>" class="navbar-item">
          <div class="navbar-item mr-3">
            <span class="icon" style="font-size: 48px; color: hsl(217, 71%, 53%)"><i class="fas fa-comments"></i></span>
          </div>
          <p class="title">Rails Chat</p>
        </a>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu">
        <div class="navbar-end">
        <div class="navbar-item">
          <% if user_signed_in? %>
            <p>Signed in as <strong><%= current_user.email %></strong></p>
          <% end %>
        </div>
          <div class="navbar-item">
            <div class="buttons">
              <% if user_signed_in? %>
                <a href="<%= destroy_user_session_path %>" class="button is-primary" data-method="delete">
                  <span class="icon">
                    <i class="fas fa-sign-out-alt"></i>
                  </span>
                  <span>Sign Out</span>
                </a>
              <% else %>
                <a href="<%= new_user_session_path %>" class="button is-primary">
                  <span class="icon">
                    <i class="fas fa-sign-in-alt"></i>
                  </span>
                  <span>Sign In</span>
                </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-warning">
        <p><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>

  <%= javascript_pack_tag 'mobile' %>
</html>
